alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias valgrind='valgrind --tool=memcheck --leak-check=full --show-reachable=yes --num-callers=20 --track-fds=yes --track-origins=yes'
alias ll='ls -l'
alias dotfiles='/usr/bin/git --git-dir="$HOME/.dotfiles/" --work-tree="$HOME"'
alias dotfiles-docker='/usr/bin/git --git-dir="$HOME/.dotfiles-docker/" --work-tree="$HOME"'
alias pyvenv='source $HOME/.pyvenv/bin/activate'
